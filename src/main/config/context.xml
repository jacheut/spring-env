<!-- 将jndi配置复制到tomcat context.xml，更改数据库连接 -->
<Resource name="jndi/Spring-env"   
            auth="Container"   
            type="javax.sql.DataSource"   
            driverClassName="com.mysql.jdbc.Driver"   
            url="jdbc:mysql://localhost:3306/test?useSSL=false&amp;characterEncoding=utf-8"
            username="mysql"   
            password="mysql"
            maxActive="40"   
            maxIdle="10"   
            maxWait="20000"/>   